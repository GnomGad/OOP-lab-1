<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
        <context:property-placeholder location="application.properties"/>
        <bean id="myPet" class="com.example.demo.introduction.Nigga">

        </bean>

        <bean id="myCar" class="com.example.demo.introduction.Car">
                <property name="fullName" value="${car.fullName}"/>
                <property name="mileage" value="${car.milleage}"/>
        </bean>

        <bean id="myEmployee" class="com.example.demo.introduction.Employee">
                <property name="name" value="${employee.name}"/>
                <property name="age" value="${employee.age}"/>
                <property name="pet" ref="myPet"/>
                <property name="car" ref="myCar"/>
        </bean>
</beans>